<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <!-- App Logo -->
        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_gift_flaticon"
            android:contentDescription="@string/app_logo_description"
            android:animation="@anim/fade_in"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="12dp" />

        <!-- Search Bar -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/crimson_glow"
            app:hintTextColor="@color/rose_quartz"
            app:endIconMode="clear_text"
            app:endIconDrawable="@drawable/ic_clear"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/app_logo"
            app:layout_constraintEnd_toStartOf="@id/login_icon"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_hint"
                android:textColor="@color/accessible_gray"
                android:textColorHint="@color/rose_quartz"
                android:background="@null"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="8dp"
                android:padding="12dp"
                android:animation="@anim/fade_in" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Login Icon -->
        <ImageView
            android:id="@+id/login_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_profile_flaticon"
            android:contentDescription="@string/login_icon_description"
            android:animation="@anim/fade_in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="12dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>